{
  "presets": [["@babel/preset-react"]],
  "plugins": [
    ["@babel/plugin-transform-runtime", { "regenerator": false }],
    ["babel-plugin-styled-components", { "ssr": false }]
  ],
  "env": {
    "client": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "useBuiltIns": "usage",
            "corejs": 3,
            "targets": {
              "browsers": [
                "> 1%",
                "Android >= 4",
                "iOS >= 12",
                "last 4 versions",
                "not ie <= 11",
                "not dead"
              ]
            }
          }
        ]
      ]
    },
    "server": {
      "presets": [["@babel/preset-env", { "targets": { "node": "current" } }]]
    }
  }
}
